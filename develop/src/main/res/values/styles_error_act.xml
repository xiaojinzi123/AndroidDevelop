<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ErrorViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#00796B</item>
        <item name="colorPrimaryDark">#00574B</item>
        <item name="colorAccent">#D81B60</item>
        <item name="homeAsUpIndicator">@drawable/develop_error_act_back</item>
        <item name="android:homeAsUpIndicator">@drawable/develop_error_act_back</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00796B</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="toolbarStyle">@style/ErrorAppToolbar</item>
        <item name="buttonStyle">@style/ErrorUiButton</item>
        <item name="android:textViewStyle">@style/ErrorUiTextView</item>
        <item name="android:alertDialogStyle">@style/ErrorUiAlertDialog</item>
    </style>

    <style name="ErrorAppToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">#00796B</item>
        <item name="titleTextAppearance">@style/ErrorAppToolbarTitle</item>
    </style>

    <style name="ErrorAppToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ErrorUiButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/develop_error_act_button_selector</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ErrorUiTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ErrorUiAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/develop_error_act_button_selector</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>